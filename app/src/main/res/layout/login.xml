<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey! Good to see you again"
        android:textSize="20sp"
        android:textColor="#1976D2"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Email/Phone"
        android:textColor="#1565C0" />

    <EditText
        android:id="@+id/editTextEmailPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:hint="Enter your Email/phone"
        android:textColor="#000000"
        android:textColorHint="#90CAF9"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="Password"
        android:textColor="#1565C0" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#90CAF9"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#0D47A1"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#0D47A1"
        android:text="SIGN IN"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Donâ€™t have an account?"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/buttonRegisterNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:text="Register Now!"
        android:textColor="#0D47A1"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
